<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<html>
    <head>
      <title>Редактура <%= brick.site.title %>: <%= brick.title %> (<%= brick.id %>)</title><%
if brick.site.clientCharset:
    %>
    <meta http-equiv="Content-Type" content="text/html; charset=<%= brick.site.clientCharset %>"><%
%>
<style>
<%= template('style', brick=brick) %>
</style>
<%= template('scripts', brick=brick) %>
   </head>
<%
filter_fields = template.filterFields(brick)
if filter_fields:
    filter = brick.filter.__class__()
browse_uri = template.edit.prefix+brick.path()+'?page=%s'
if hasattr(brick, 'filterState'):
   state = brick.filterState
   chunks = []
   for name in filter_fields:
      field = brick.filter.createField(state.fields[name])
      value = getattr(state, name)
      if value:
          chunks.append('filter-%s=%s' % (name, quoteURLPath(field.convertToString(value,state)).replace('%', '%%')))
   browse_uri = '&'.join([browse_uri]+chunks)
%>
<body marginwidth=0 marginheight=0 topmargin=0 leftmargin=0>
<div id="notify" style="display: none;"></div>

<table cellpadding=12 cellspacing=0 height="100%" width="100%">
    <tr valign="top">
        <td class="leftColumn">
<%= template('inc_navigation', brick=brick) %>
        </td>
        <td class="rightColumn">

<table border="0" cellspacing="1" cellpadding="9" bgcolor="#A0AAB1" width="100%">
<tr><td bgcolor="#354750">
<span class=t18b id=lb><b><%= brick.title %> (<%= brick.id %>)<br></span>
</td></tr>

<%= template('inc_browse', brick=brick, uri=browse_uri) %>

<!-- stream menu --><%
menus = []
if filter_fields:
    menus.append('<a href="#" onclick="toggleElement(\'filter\'); return false"><span class=t12b id=y1>'+'Фильтр'+'</span></a>')
if template.isStreamCreatable(brick):
    menus.append('<a href="'+template.edit.prefix+brick.path()+'?qps-action:newItem=1'+'"><span class=t12b id=y1>'+'Создать новый элемент'+'</span></a>')
if template.isStreamUnbindable(brick):
    menus.append('<a href="'+template.edit.prefix+'/'+brick.virtual.templateStream+'/?qps-action%3AshowBinding=1&bound='+brick.path()+'" onclick="javascript:var new_window=window.open(\''+template.edit.prefix+'/'+brick.virtual.templateStream+'/?qps-action%3AshowBinding=1&bound='+brick.path()+'\',\'_blank\',\'width=620,height=460,toolbar=no,location=no,status=no,menubar=no,scrollbars=yes,resizable=yes\'); return false;"><span class=t12b id=y1>Перевязать</span></a>')
if menus:
    %>
<tr bgcolor="#E1E4E6"><td align="right"><%
    for num, item in enumerate(menus):
        %><%= item %><%
        if num != len(menus)-1:
            %>&nbsp; <span id=y1>|</span>&nbsp; <%
    %></td></tr><%
%>
<!-- /stream menus -->

<!-- filter -->
<%
if filter_fields:
    has_state = hasattr(brick, 'filterState')
    filterState = getattr(brick, 'filterState', filter.createState(brick))
    %>
<form action="<%= template.edit.prefix+brick.path() %>" method="POST">
<tr bgcolor="#E1E4E6" id="filter"<%= not has_state and ' style="display: none;"' or '' %>><td>
<%
    for name in filter_fields:
        %><%= template.showFilterField(filterState, name) %><br>
<span class="s3">&nbsp;</span><br><%
    %>
<span class="s12">&nbsp;</span><br>
<div style="text-align: right">
<input type="submit" value="Показать">
</div>
</td></tr>
</form><%
%>
<!-- /filter -->

<%
if brick:
    %>
<form action="<%= template.edit.prefix + brick.path() %>" method="POST" onsubmit="n=document.getElementById('notify'); n.innerHTML='Изменения сохраняются, пожалуйста, подождите.'; n.style.display='';">
<tr bgcolor="#E1E4E6"><td>

<table border="0" cellpadding="6" cellspacing="1" width="100%" bgcolor=#E1E4E6>
<!-- fields titles -->
    <tr bgcolor="#A0AAB1"><%
    for field_name in template.allowedIndexFields(brick):
        field_type = brick.indexFields[field_name]
        %>
        <td nowrap style="height: 2em;">
        <span class=t11><%= field_type.indexTitle %></span>
        </td><%
    if template.isStreamDeletable(brick) or template.isStreamUnbindable(brick):
        %>
        <td align="center"><span class=t11b id=y1>[x]</span>
        </td><%
    %>
    </tr>
<!-- /field titles --><%
    for repeat in Cook.Repeat(brick):
        item = repeat.value
        %>

    <tr valign="top"><%
        for field in template.allowedIndexFields(brick):
            %>
        <td bgcolor=#F0F1F2>
<%= template.showFieldInIndex(item, field) %>
        </td><%
        if template.isStreamDeletable(brick) or template.isStreamUnbindable(brick):
            %>
        <td bgcolor=#F0F1F2><center><input type="checkbox" name="qps-select" value="<%= item.fields.id.convertToString(item.id) %>"></center>
        </td><%
        %>
    </tr><%
    %>
</table>
</td></tr>

<tr bgcolor="#E1E4E6"><td align="right"><%
    if template.isStreamUpdatable(brick):
        %>
&nbsp; <input type="submit" name="qps-action:updateItems" value="Обновить"><%
    if hasattr(brick, 'joinField') and 'w' in template.getFieldPermissions(brick.fields[brick.joinField]):
        %>
&nbsp; <input type="submit" name="qps-action:unbindItems" value="Отвязать"><%
    if template.isStreamDeletable(brick):
        %>&nbsp; <input type="submit" name="qps-action:deleteItems" value="Удалить"><%
    %>
</td></tr>
</form><%
else:
    %>
<tr bgcolor="#E1E4E6"><td>
    <span class=t11 id=db1>В списке нет ни одного элемента</span>
</td></tr><%
%>

<%= template('inc_browse', brick=brick, uri=browse_uri) %>

</table>

        </td>
    </tr>
</table>
</body>
</html>
